<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory>
 
   <!-- Change the connection url, username, and password for own database -->
    <property name="connection.url">jdbc:mysql://localhost:3306/movietracker?useLegacyDatetimeCode=false&amp;serverTimezone=UTC</property>
    <property name="connection.username">root</property>
    <property name="connection.password">Batman@123</property>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
 
    <property name="show_sql">true</property>
 
    <property name="format_sql">true</property>
    
    <!-- comment this out for now, may need to fix: -->
    <!-- <property name="hbm2ddl.auto">create</property> -->
 
    <!-- JDBC connection pool (use the built-in) -->
    <property name="connection.pool_size">1</property>
    <property name="current_session_context_class">thread</property>
     <mapping class="com.movietracker.User"/>
     <mapping class="com.movietracker.Movie"/>
</session-factory>
</hibernate-configuration>